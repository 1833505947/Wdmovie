<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_bg"
            android:orientation="vertical"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_130"
                android:layout_marginRight="@dimen/dp_40"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@drawable/login_phone" />

            <EditText
                    android:id="@+id/phone"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_30"
                    android:background="@null"
                    android:textColor="#fff"
                    android:hint="手机号"
                    android:textColorHint="#fff"
                    android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_40"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@drawable/login_lock" />

            <EditText
                    android:id="@+id/pwd"
                    android:layout_width="@dimen/dp_260"
                    android:layout_height="@dimen/dp_30"
                    android:background="@null"
                    android:textColor="#fff"
                    android:hint="登录密码"
                    android:textColorHint="#fff"
                    android:textSize="@dimen/sp_18" />

            <CheckBox
                    android:id="@+id/eye"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:button="@null"
                    android:background="@drawable/login_yan"
                    android:layout_marginRight="@dimen/dp_40"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_40"
                android:orientation="horizontal">


            <CheckBox
                    android:id="@+id/jizhu_rember"
                    android:button="@drawable/checkbox_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:text="记住密码"/>

            <TextView
                    android:id="@+id/go_reg"
                    android:layout_marginLeft="@dimen/sp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_40"
                    android:text="快速注册"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp_60"
                android:orientation="vertical">

            <Button
                    android:id="@+id/bt_login"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="@dimen/dp_40"

                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/yuanjiao_shape"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="#ed83c5"
                    android:textSize="@dimen/sp_18" tools:ignore="OnClick"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#ffffff" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="第三方快速登录"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_10" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/go_weixin"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/login_weixin" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>